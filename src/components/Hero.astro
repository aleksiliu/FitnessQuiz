---
import { Image } from 'astro:assets';
import bgImage from '../assets/background.jpg';
import ScrollingBanner from '../components/ScrollingBanner.astro';
---

<section class="relative h-screen">
  <!-- Background Image -->
  <Image src={bgImage} alt="Background image" class="absolute inset-0 w-full h-full object-cover" />

  <!-- Overlay and Content -->
  <div class="container absolute inset-0 flex items-center justify-center">
    <div class="text-center text-white">
      <h1 class="text-5xl font-bold">NO PAIN NO GAIN</h1>
      <p class="mt-4">#1 Gym workout tracking app. Progress tracked, workouts personalized - Your all-in-one fitness solution</p>
      <a href="/quiz/" class="mt-6 px-4 py-2 bg-orange-500 text-white font-semibold rounded">Take the test</a>
    </div>
  </div>
  
  <ScrollingBanner />
</section>

  
